<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="900.0" prefHeight="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proj.provas.aplicacao.view.controller.TelaPrincipalAlunoController"
            style="-fx-background-color: #F0F2F5;"> <children>
    <VBox layoutX="100.0" layoutY="50.0" prefHeight="550.0" prefWidth="700.0"
          alignment="TOP_CENTER" spacing="20"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="50.0"
          style="-fx-background-color: #FFFFFF; -fx-padding: 30; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);"> <Label text="Painel do Aluno"
                                                                                                                                                                                          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1d4762; -fx-padding: 0 0 10 0;"/>

        <Label fx:id="labelBemVindo" text="Selecione uma opção:"
               style="-fx-font-size: 16px; -fx-text-fill: #555555; -fx-padding: 0 0 30 0;"/>

        <HBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
            <Button fx:id="botaoPerfil" text="Perfil" onAction="#abrirPerfil" prefWidth="150"
                    style="-fx-background-color: #1d4762; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 10 20;"/>
            <Button fx:id="botaoProvas" text="Provas" onAction="#abrirProvas" prefWidth="150"
                    style="-fx-background-color: #1d4762; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 10 20;"/>
            <Button fx:id="botaoFeedback" text="Feedback" onAction="#abrirFeedback" prefWidth="150"
                    style="-fx-background-color: #1d4762; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 10 20;"/>
        </HBox>
        <padding>
            <Insets bottom="20.0" />
        </padding>
    </VBox>
</children>
</AnchorPane>