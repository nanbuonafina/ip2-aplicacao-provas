<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="proj.provas.aplicacao.view.controller.TelaDeAutoCadastroController"
            prefWidth="500" prefHeight="700"
            style="-fx-background-color: #f4f8fb;">

    <VBox spacing="22" alignment="CENTER"
          layoutX="50" layoutY="40" prefWidth="400"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label text="Cadastro de Usuário"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1d4762;" />

        <ComboBox fx:id="comboTipoUsuario" promptText="Tipo de Usuário" prefWidth="280"
                  style="-fx-border-color: #1d4762; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6;" />

        <TextField fx:id="campoNome" promptText="Nome completo" prefWidth="280"
                   style="-fx-border-color: #1d4762; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6;" />

        <TextField fx:id="campoEmail" promptText="Email" prefWidth="280"
                   style="-fx-border-color: #1d4762; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6;" />

        <TextField fx:id="campoIdentificador" promptText="Matrícula ou ID" prefWidth="280"
                   style="-fx-border-color: #1d4762; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6;" />

        <PasswordField fx:id="campoSenha" promptText="Senha" prefWidth="280"
                       style="-fx-border-color: #1d4762; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 6;" />

        <Button text="Cadastrar" onAction="#cadastrarUsuario" prefWidth="200"
                style="-fx-background-color: #1d4762; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

        <Label fx:id="labelMensagem" text="" wrapText="true" maxWidth="300"
               style="-fx-text-fill: red; -fx-font-size: 12px;" />
    </VBox>

    <Button text="Voltar para Login"
            onAction="#voltarParaLogin"
            layoutX="150" layoutY="650" prefWidth="200"
            style="-fx-background-color: transparent; -fx-text-fill: #1d4762; -fx-underline: true;" />
</AnchorPane>
