<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox spacing="10.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="proj.provas.aplicacao.controller.TelaDeAutoCadastroController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Cadastro de Usuário" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="comboTipoUsuario" promptText="Selecione o tipo">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Aluno"/>
                <String fx:value="Professor"/>
            </FXCollections>
        </items>
    </ComboBox>

    <TextField fx:id="campoNome" promptText="Nome completo"/>
    <TextField fx:id="campoEmail" promptText="E-mail"/>
    <PasswordField fx:id="campoSenha" promptText="Senha"/>
    <TextField fx:id="campoIdentificador" promptText="Matrícula (Aluno) ou ID (Professor)"/>

    <Button text="Cadastrar" onAction="#cadastrarUsuario" prefWidth="200"/>

    <Button text="Voltar" onAction="#voltarParaLogin" prefWidth="200"/>

    <Label fx:id="labelMensagem" textFill="green" wrapText="true"/>

</VBox>
