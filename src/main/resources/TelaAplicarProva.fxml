<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="proj.provas.aplicacao.view.controller.TelaAplicarProvaController">

    <top>
        <Label text="Aplicar Prova" style="-fx-font-size: 24px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" padding="10">

            <HBox spacing="10">
                <Label text="ID da Prova:"/>
                <TextField fx:id="campoIdProva" promptText="Digite o ID da prova"/>
                <Button text="Carregar Prova" onAction="#onCarregarProva"/>
            </HBox>

            <Separator />

            <Label text="Informações da Prova:" style="-fx-font-weight: bold;"/>

            <Label fx:id="labelTurma" />
            <Label fx:id="labelDisciplina" />
            <Label fx:id="labelProfessor" />
            <Label fx:id="labelData" />
            <Label fx:id="labelDuracao" />
            <Label fx:id="labelNotaTotal" />

            <Label text="Questões:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="listaQuestoes" prefHeight="200"/>

        </VBox>
    </center>

</BorderPane>
