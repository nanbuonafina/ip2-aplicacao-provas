<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox spacing="10.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="proj.provas.aplicacao.controller.TelaDeLogonController">

   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

   <ComboBox fx:id="comboTipoUsuario" promptText="Tipo de Usuário">
      <items>
         <FXCollections fx:factory="observableArrayList">
            <String fx:value="Aluno"/>
            <String fx:value="Professor"/>
         </FXCollections>
      </items>
   </ComboBox>

   <TextField fx:id="campoIdentificador" promptText="Matrícula (Aluno) ou ID (Professor)"/>
   <PasswordField fx:id="campoSenha" promptText="Senha"/>

   <Button text="Entrar" onAction="#realizarLogin" prefWidth="200"/>
   <Button text="Novo Cadastro" onAction="#irParaCadastro" prefWidth="200"/>

   <Label fx:id="labelMensagem" textFill="red" wrapText="true"/>

</VBox>
